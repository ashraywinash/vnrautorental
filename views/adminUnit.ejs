<!DOCTYPE html>
<html>
<head>
    <title>Admin - Units</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>All Units</h2>
        <a href="/admin/unit/new" class="btn btn-primary">Create New Unit</a>
    </div>
    <% if (units && units.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Unit ID</th>
                    <th>Months Paid</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% units.forEach(function(unit) { %>
                    <tr>
                        <td><%= unit.id %></td>
                        <td><%= unit.payments.get(new Date().getFullYear().toString())?.monthsPaid %></td>
                        <td><%= unit.status %></td>
                        <td>
                            <a href="/admin/unit/<%= unit.id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
                            <form action="/admin/unit/<%= unit.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this unit?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div class="alert alert-info">No units found.</div>
    <% } %>
</div>
</body>
</html>