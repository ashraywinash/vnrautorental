<!DOCTYPE html>
<html>
<head>
    <title>Admin - Tenants</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Tenants</h2>
        <a href="/admin/tenant/new" class="btn btn-primary">Create New Tenant</a>
    </div>
    <% if (tenants && tenants.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tenants.forEach(function(tenant, idx) { %>
                    <tr>
                        <td><%= idx + 1 %></td>
                        <td><%= tenant.name %></td>
                        <td><%= tenant.email %></td>
                        <td>
                            <a href="/admin/tenant/<%= tenant.id %>" class="btn btn-sm btn-info">View</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <div class="alert alert-info">No tenants found.</div>
    <% } %>
</div>
</body>
</html>